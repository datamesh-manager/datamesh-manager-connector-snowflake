        <executions>
          <execution>
            <id>database-api</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <inputSpec>https://raw.githubusercontent.com/snowflakedb/snowflake-rest-api-specs/refs/heads/main/releases/8.40/specifications/database.yaml</inputSpec>
              <generatorName>java</generatorName>
              <library>apache-httpclient</library>
              <configOptions>
                <annotationLibrary>none</annotationLibrary>
                <openApiNullable>false</openApiNullable>
                <useJakartaEe>true</useJakartaEe>
                <dateLibrary>java8</dateLibrary>
                <hideGenerationTimestamp>true</hideGenerationTimestamp>
                <sourceFolder>src/gen/java/main</sourceFolder>
                <generateBuilders>false</generateBuilders>
                <apiPackage>snowflake.client.api</apiPackage>
                <invokerPackage>snowflake.client</invokerPackage>
                <modelPackage>snowflake.client.model.database</modelPackage>
                <useRuntimeException>true</useRuntimeException>
              </configOptions>
              <generateModelTests>false</generateModelTests>
              <generateApiTests>false</generateApiTests>
            </configuration>
          </execution>

          <execution>
            <id>schema-api</id>
